<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:apps="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="horizontal">


            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/chris"
                apps:shapeAppearanceOverlay="@style/circularImage"
                apps:strokeColor="@color/cool_blue"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                apps:strokeWidth="1dp" />

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ram"
                apps:shapeAppearanceOverlay="@style/circularImage"
                apps:strokeColor="@color/cool_blue"
                android:layout_marginRight="10dp"
                apps:strokeWidth="1dp" />

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/robert"
                apps:shapeAppearanceOverlay="@style/circularImage"
                apps:strokeColor="@color/cool_blue"
                android:layout_marginRight="10dp"
                apps:strokeWidth="1dp" />

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/kabir"
                apps:shapeAppearanceOverlay="@style/circularImage"
                apps:strokeColor="@color/cool_blue"
                android:layout_marginRight="10dp"
                apps:strokeWidth="1dp" />

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/spiderman"
                apps:shapeAppearanceOverlay="@style/circularImage"
                apps:strokeColor="@color/cool_blue"
                android:layout_marginRight="10dp"
                apps:strokeWidth="1dp" />

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/tom"
                apps:shapeAppearanceOverlay="@style/circularImage"
                apps:strokeColor="@color/cool_blue"
                android:layout_marginRight="10dp"
                apps:strokeWidth="1dp" />

        </LinearLayout>
    </HorizontalScrollView>
</RelativeLayout>