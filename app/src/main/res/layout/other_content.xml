<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/dance" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/artist" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/chess" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/colors" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/drawing" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/exams" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/fitness" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/games" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/dance" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/dance" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/gym" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/hotel" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/meditation" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/plantation" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/yoga" />

        </LinearLayout>
    </HorizontalScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>